<!DOCTYPE html>
<html>
    {{>head}}
    <body id="particles-js" m-md-3>
        <!-- Main content goes here -->      
        <div class="container vh-100 d-flex flex-column justify-content-between">
          {{>header}}
        <section class="main zi-1">
      <!-- Your code goes here -->
          <div class="wrapper">
            <!-- Section header -->
            
            <div class="row">
              <div class="col col-md-12">
                <a class="back" href="#"><i class="fas fa-arrow-left"></i></a>
              </div>
            </div>
            <div class="row">
              <div class="col col-md-12 text-center d-flex justify-content-around">
                <h1>LOCATE <span>Blood</span></h1>
              </div>
            </div>
            <!-- Section main / form -->
            <form>
              <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="location">
                      <input type="text" class="form-control" id="location" placeholder="Location">
                      <i class="fas fa-map-marker-alt"></i>
                    </label>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-5 select-icon">
                  <label for="radius">
                    <select id="radius" class="form-control">
                      <option disabled selected>Search radius</option>
                      <option value="1">0.5km</option>
                      <option value="2">1km</option>
                      <option value="3">3km</option>
                      <option value="4">5km</option>
                      <option value="5">15km</option>
                      <option value="6">more than 15km</option>
                    </select>
                    <i class="far fa-compass"></i>
                  </label>
                </div>
                <div class="form-group col-md-2 select-icon">
                  <label for="blood-group">
                    <select id="blood-group" class="form-control">
                      <option disabled selected>Blood group</option>
                      <option value="1">A+ve</option>
                      <option value="2">A-ve</option>
                      <option value="3">B+ve</option>
                      <option value="4">B-ve</option>
                      <option value="5">O+ve</option>
                      <option value="6">O-ve</option>
                      <option value="7">AB+ve</option>
                      <option value="8">AB-ve</option>
                    </select>
                    <i class="fas fa-syringe"></i>
                  </label>
                </div>
                <div class="form-group col-md-5">
                  <label for="when">
                    <input data-provide="datepicker" type="text" data-provide="datepicker-inline" class="form-control" id="when" placeholder="When">
                    <i class="far fa-calendar-alt"></i>
                  </label>
                </div>
              </div>
              <div class="form-row">
                <div class="form-group col-md-4 offset-md-4">
                  <button type="submit" class="btn btn-primary btn-block">Search</button>
                </div>
              </div>
            </form>
          </div>
        </section>
        {{>footer}}
        </div>
        {{>utilityJS}}
      </body>
  </html>
