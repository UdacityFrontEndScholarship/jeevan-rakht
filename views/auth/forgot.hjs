<!DOCTYPE html>
<html>
    {{>head}}
    <body id="particles-js" m-md-3>     
        <div class="vh-100 d-flex flex-column justify-content-between">
            {{>header}}
            <!-- Your code goes here -->      
            <section class="container my-5">
                {{#alertMessage}}
                <div class="alert alert-danger text-center zi-1">{{alertMessage}}</div>
                {{/alertMessage}}            
                <div class="main-content zi-1">
                    <a href="/login" class="back-arrow">
                        <i class="fas fa-arrow-left"></i>
                    </a>

                    <div class="content-wrapper">
                        <h2 class="text-uppercase"><strong>Password Link</strong></h2>            
                    
                        <form method="POST" class="box-350 mt-5">	
                            <div class="input-wrapper input-wrapper-lg">
                                <input type="email" name="email" id="email" value ="{{email}}" placeholder="enter your email">
                                <i class="far fa-envelope"></i>
                            </div>   

                            <button type="submit" class="btn-link w-100 mt-4">Send Me Reset Link</button> 
                        </form>
                    </div>
                    <!-- End content-wrapper -->
                </div>
                <!-- End main-content -->
            </section>
            {{>footer}}
        </div>
        {{>utilityJS}}
    </body>
</html>
